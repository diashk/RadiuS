<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- entries is a String array that the user sees, entryValues are the values saved to the SharedPreferences file -->
    <ListPreference
        android:key="Measurement_key"
        android:title="@string/Measurement_pref_title"
        android:summary="@string/Measurement_pref_query"
        android:entries="@array/Measurement_entries"
        android:entryValues="@array/Measurement_values"
        android:defaultValue="K"
        />

    <ListPreference
        android:key="Radius_key"
        android:title="@string/Radius_pref_title"
        android:summary="@string/Radius_pref_query"
        android:entries="@array/radius_entries"
        android:entryValues="@array/radius_values"
        android:defaultValue="3000"
        />


</PreferenceScreen>